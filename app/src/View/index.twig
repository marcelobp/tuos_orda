    <div class="row text-center hidden-lg hidden-md">
        <div class="col-sm-6 col-xs-6 hero-feature">
            <div class="thumbnail div-faculties">
                <a href="/groups/list/2754">
                <img src="img/arts.png" alt="">
                <div class="caption">
                    <h5><b>Arts and<br />Humanities</b></h5>
                </div>
                </a>
            </div>
        </div>
    
